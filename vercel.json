{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ]
}